<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movie_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    >

    <androidx.cardview.widget.CardView
       android:id="@+id/card_poster"
        android:layout_width="150dp"
        android:layout_height="216dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/film_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@mipmap/image_poster"
            android:scaleType="centerCrop"
            android:contentDescription="@string/poster_name"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/film_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/card_poster"
        app:layout_constraintStart_toStartOf="@id/card_poster"
        app:layout_constraintEnd_toEndOf="@id/card_poster"
        android:layout_marginTop="8dp"
        android:layout_marginStart="3dp"
        tools:text="Гнев человеческий"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/film_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Эйч — загадочный и холодный на вид джентльмен, но внутри него пылает жажда справедливости. Преследуя..."
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/film_title"
        app:layout_constraintStart_toStartOf="@+id/film_title"
        app:layout_constraintEnd_toEndOf="@+id/card_poster"
        android:layout_marginTop="10dp"
        android:minLines="6"
        android:maxLines="6"
        android:ellipsize="end"/>

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:clickable="false"
        android:isIndicator="true"
        android:progressTint="@android:color/black"
        android:progressBackgroundTint="@android:color/black"
        android:secondaryProgressTint="@android:color/background_dark"
        style="?android:attr/ratingBarStyleSmall"
        app:layout_constraintStart_toStartOf="@+id/film_description"
        app:layout_constraintTop_toBottomOf="@+id/film_description"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="55dp"
        />


    <TextView
        android:id="@+id/age_restriction"
        android:layout_width="20dp"
        android:layout_height="20dp"
        tools:text="18+"
        android:textSize="7sp"
        android:textColor="@color/black"
        android:background="@drawable/ic_ellipse"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/card_poster"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="52dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
